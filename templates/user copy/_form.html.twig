{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastname) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.plainPassword) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.roles) }}
        </div>
    </div>
{{ form_end(form) }}